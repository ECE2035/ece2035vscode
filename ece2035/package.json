{
  "name": "ece2035",
  "displayName": "ECE2035",
  "description": "VS Code Companion Extension for Georgia Tech ECE 2035",
  "publisher": "GatechECE2035",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebugResolve:riscv-vm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ece2035.openscreen",
        "title": "Open RISC-V Screen"
      }
    ],
    "breakpoints": [
      {
        "language": "riscv"
      }
    ],
    "debuggers": [
      {
        "type": "riscv-vm",
        "languages": [
          "riscv"
        ],
        "label": "RISC-V Emulator",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "A workspace-relative path to the assembly file.",
                "default": "${file}"
              },
              "assignment": {
                "type": "string",
                "description": "The workspace-relative path to the assignment binary file.",
                "default": "assignment.bin"
              },
              "auto_open_screen": {
                "type": "boolean",
                "description": "Whether to automatically open the screen when debugging.",
                "default": true
              },
              "seed": {
                "type": "number",
                "description": "The seed to use for the random number generator. Zero means to use a random seed.",
                "default": 0
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "riscv-vm",
            "request": "launch",
            "name": "Run Assembly",
            "program": "${file}",
            "auto_open_screen": false
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "riscv",
        "aliases": [
          "RISC-V",
          "RISC-V Assembly"
        ],
        "extensions": [
          ".asm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "riscv",
        "scopeName": "source.riscv",
        "path": "./syntaxes/riscv.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@microsoft/vscode-file-downloader-api": "^1.0.1",
    "vscode-languageclient": "^8.1.0"
  },
  "extensionDependencies": [
    "mindaro-dev.file-downloader"
  ]
}
